<%- include("partials/header")  %> 

<h1>home page</h1>
<!-- ejs with bootstrap card  -->
<% posts.forEach(post => { %> 
    <div class="card my-4">
        <div class="card-body">
            <h5 class="card-title"><%= post.topic  %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= post.name  %></h6>
            <p class="card-text"><%= post.message  %></p>
            <a href="posts/<%= post._id %> " class="btn btn-info">View More</a>
        </div>
    </div>
<% }) %> 

<%- include("partials/footer")  %> 