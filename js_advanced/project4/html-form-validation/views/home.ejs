<div class="container py-5">

<h1 class="py-3 fs-1 fw-bold text-success">FORM ğŸ¦†</h1>

<form action="/submit" method="POST">

  <label for="first">First name:</label>
  <input type="text" id="first" name="first" pattern="[A-Za-z]{1,20}" placeholder="" required autofocus>
  <br><br>

  <label for="last">First name:</label>
  <input type="text" id="last" name="last" min="1" max="20" placeholder="1-20 letters only" pattern="[A-Za-z]{1,20}" required>
  <br><br>

  <label for="email">Email:</label>
  <input type="email" id="email" name="email" placeholder="johnny@cool.com" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" min="1" max="100" required>
  <br><br>

  <label for="phone">Phone number:</label>
  <input type="tel" id="phone" name="phone" placeholder="555-555-5555" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
  <br><br>

  <label for="country">Country:</label>
  <select name="country" id="country" required>
    <option value="us">United State</option>
    <option value="canada">Canada</option>
    <option value="mexico">Mexico</option>
    <option value="other">Other</option>
  </select>
  <br><br>

  <input type="radio" id="old" name="age" value="yes" required>
  <label for="html">I am 18+ years old.</label><br>
  <input type="radio" id="young" name="age" value="yes">
  <label for="html">I am under 18 years old.</label><br>
  <br><br>

  <label for="file">Upldad your resumÃ©:</label>
  <input type="file" id="file" name="filename" accept=".doc, .pdf, .rtf, .txt">

  <br><br>
  <!-- <input type="submit"> -->
  <button type="submit" class="btn btn-success px-5">submit</button>

</form>

</div>

